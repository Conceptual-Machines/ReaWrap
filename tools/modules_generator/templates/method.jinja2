{%- if function_name.strip() %}
--- {{ function_name }}.
{%- endif %}
{%- if docs -%}
{%- for line in docs.split('\n') if line.strip() %}
-- {{ line }}
{%- endfor %}
{%- endif -%}
{%- if params -%}
{%- for param in params %}
{%- if param.is_optional -%}
    {%-  if param.description %}
-- @param {{ param.name }} {{ param.lua_type }} Optional. {{ param.description }}
    {%-  else %}
-- @param {{ param.name }} {{ param.lua_type }} Optional.
    {%-  endif -%}
{%-  else -%}
    {%-  if param.description %}
-- @param {{ param.name }} {{ param.lua_type }}. {{ param.description }}
    {%-  else %}
-- @param {{ param.name }} {{ param.lua_type }}.
    {%-  endif -%}
{%-  endif -%}
{%- endfor -%}
{%- endif -%}
{% if return_values %}
{%- for ret_name_and_type in return_values %}
-- @return {{ ret_name_and_type }}
{%- endfor %}
{%- endif %}
{{ function_signature }}
    {{ function_body }}

